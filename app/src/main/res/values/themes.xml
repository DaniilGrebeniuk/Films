<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Films" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/blue</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @drawable/ic_splashscreen_logo_animated
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">2147483647</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>


    </style>
    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer"/>
        <attr name="stroke" format="float"/>
    </declare-styleable>
</resources>